<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="sequential">
    <targets>
        <target android:excludeId="@id/toolbar" />
        <target android:excludeId="@android:id/statusBarBackground" />
    </targets>
    <fade>
        <targets>
            <target android:targetId="@+id/tv_carousel_item_title" />
        </targets>
    </fade>
    <changeBounds>

        <targets>
            <target android:targetId="@+id/iv_carousel_item_photo" />
        </targets>
    </changeBounds>
    <changeTransform>

        <targets>
            <target android:targetId="@+id/iv_carousel_item_photo" />
        </targets>
    </changeTransform>
    <changeClipBounds>

        <targets>
            <target android:targetId="@+id/iv_carousel_item_photo" />
        </targets>
    </changeClipBounds>
</transitionSet>